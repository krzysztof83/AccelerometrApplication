<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sdacademy.pl.accelerometrapplication.MainActivity">

    <TextView
        android:id="@+id/axis_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="TextView"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/axis_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/axis_x"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="TextView"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/axis_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/axis_y"
        android:layout_below="@+id/axis_y"
        android:layout_marginTop="43dp"
        android:text="TextView"
        android:textSize="36sp" />
</RelativeLayout>
